    <oval-def:title>DSA-1516-1 dovecot - privilege escalation</oval-def:title>
    <oval-def:affected family="unix">
      <oval-def:platform>Debian GNU/Linux 4.0</oval-def:platform>
      <oval-def:product>dovecot</oval-def:product>
